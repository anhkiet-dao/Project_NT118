<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================================= -->
    <!-- AUTH TEXT STYLES                          -->
    <!-- Using League Spartan Font (Geometric)     -->
    <!-- ========================================= -->

    <!-- Auth Screen Title (Large, Bold) -->
    <style name="TextAppearance.Auth.Title" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Auth Screen Subtitle -->
    <style name="TextAppearance.Auth.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Auth Input Label -->
    <style name="TextAppearance.Auth.InputLabel" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Auth Input Text -->
    <style name="TextAppearance.Auth.Input" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Auth Button Text -->
    <style name="TextAppearance.Auth.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Auth Link Text (Forgot Password, Sign Up, etc.) -->
    <style name="TextAppearance.Auth.Link" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">15sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Auth Helper Text / Error Text -->
    <style name="TextAppearance.Auth.Helper" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Auth Welcome Text (Large Display) -->
    <style name="TextAppearance.Auth.Welcome" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/league_spartan</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>