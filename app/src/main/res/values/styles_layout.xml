<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================================= -->
    <!-- SECTION HEADER STYLES                    -->
    <!-- ========================================= -->

    <!-- Section Header Container -->
    <style name="SectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/section_margin_top</item>
    </style>

    <!-- Section Title TextView -->
    <style name="SectionTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">@style/TextAppearance.App.SectionTitle</item>
    </style>

    <!-- Section Detail Link -->
    <style name="SectionDetailLink">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Link</item>
        <item name="android:text">Chi tiáº¿t ></item>
    </style>

    <!-- ========================================= -->
    <!-- RECYCLERVIEW STYLES                      -->
    <!-- ========================================= -->

    <!-- Base RecyclerView Style -->
    <style name="BookRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/section_margin_top_tiny</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- Horizontal RecyclerView (smaller height) -->
    <style name="BookRecyclerView.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/section_margin_top_small</item>
    </style>

    <!-- ========================================= -->
    <!-- CARD STYLES                              -->
    <!-- ========================================= -->

    <!-- Featured Book Card -->
    <style name="FeaturedBookCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_featured_height</item>
        <item name="cardCornerRadius">@dimen/corner_radius_mini </item>
<!--        <item name="cardUseCompatPadding">true</item>-->
    </style>

    <!-- PDF Info Card -->
    <style name="PdfInfoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/content_padding_small</item>
        <item name="android:background">@color/bg_secondary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

</resources>