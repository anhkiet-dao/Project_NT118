<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nút được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/> <!-- màu xanh khi chọn -->
            <corners android:radius="150dp"/>  <!-- bo tròn các góc -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ECEFF1"/> <!-- màu xám nhạt bình thường -->
            <corners android:radius="150dp"/>
        </shape>
    </item>
</selector>
