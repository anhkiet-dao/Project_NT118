<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#D1C4E9"/> <!-- màu khi nhấn -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#EDE7F6"/> <!-- màu bình thường -->
            <stroke android:width="1dp" android:color="#B39DDB"/> <!-- viền mảnh -->
        </shape>
    </item>
</selector>
