<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- Main Content: ViewPager and Loading -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary"
        android:elevation="8dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pdfViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Invisible toggle button in center -->
        <View
            android:id="@+id/btnToggleControls"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/loadingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBarLoading"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:indeterminate="true" />

            <TextView
                android:id="@+id/txtLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Đang tải..."
                android:textAppearance="@style/TextAppearance.App.BodyMedium" />

        </LinearLayout>

        <!-- Enhanced Reading Progress Indicator -->
        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:visibility="gone">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/readingProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="#40FFFFFF"
                android:progressTint="@color/success" />
        </LinearLayout>

        <!-- Bottom Controls Container (tap to toggle) - OVERLAY -->
        <LinearLayout
            android:id="@+id/bottomControlsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btnNote"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Ghi chú"
                android:padding="8dp"
                android:src="@drawable/ic_note" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressDownload"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:indeterminate="true"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Top Bar - OVERLAY -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/bg_overlay"
        android:elevation="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/txtTieuDe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Tên sách"
            android:textAppearance="@style/TextAppearance.App.TitleMedium"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnFavorite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="Yêu thích"
                android:src="@drawable/ic_favorit" />

            <ImageView
                android:id="@+id/btnDown"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:contentDescription="Tải xuống"
                android:src="@drawable/ic_download2" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:contentDescription="Cài đặt"
                android:src="@drawable/ic_settings" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_overlay"
        android:clickable="true"
        android:elevation="24dp"
        android:focusable="true"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_settings_card"
                android:elevation="12dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/title_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:text="Cài đặt"
                    android:textAppearance="@style/TextAppearance.App.TitleLarge" />

                <TextView
                    android:id="@+id/Chieudoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chiều đọc:"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgReadingDirection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="4dp">

                    <RadioButton
                        android:id="@+id/rbVertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dọc"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium" />

                    <RadioButton
                        android:id="@+id/rbHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngang"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium" />
                </RadioGroup>

                <TextView
                    android:id="@+id/txtPageMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Hiển thị trang:"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgPageMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="4dp">

                    <RadioButton
                        android:id="@+id/rbSinglePage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 trang"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium" />

                    <RadioButton
                        android:id="@+id/rbDoublePage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 trang"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium" />
                </RadioGroup>

                <Switch
                    android:id="@+id/switchAutoNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Tự động chuyển trang"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <LinearLayout
                    android:id="@+id/layoutAutoTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtAutoTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian:"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        />

                    <SeekBar
                        android:id="@+id/seekAutoTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="60" />

                    <TextView
                        android:id="@+id/txtAutoTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="5s"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchVoiceControl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Điều khiển bằng giọng nói"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCloseSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="@color/primary"
                    android:text="Đóng"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</FrameLayout>