<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingEnd="60dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/imgAvatarBot"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="top"
        android:src="@drawable/ic_chatbot_avatar"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txtMessageBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/background_bot_bubble"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:maxWidth="280dp"
        android:elevation="1dp"
        android:textAppearance="@style/TextAppearance.App.BodyLarge"
        android:text="Xin chào! Tôi là AI trợ lý."
        android:textColor="@color/text_on_primary"
        android:textSize="16sp" />

</LinearLayout>